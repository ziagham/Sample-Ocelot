{
  "GlobalConfiguration": {
    "RequestIdKey": "OcRequestId",
    "AdministrationPath": "/administration",
    "UseServiceDiscovery": true,
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul"
    }
  },
  "RateLimitOptions": {
    "ClientWhitelist": [],
    "EnableRateLimiting": true,
    "Period": "1s",
    "HttpStatusCode": 428,
    "QuotaExceededMessage": "Too many requests...",
    "PeriodTimespan": 1,
    "Limit": 1
  },
  "HttpHandlerOptions": {
    "UseTracing": true
  },
  "LoadBalancerOptions": {
    "Type": "LeastConnection",
    "Key": null,
    "Expiry": 0
  },
  "QoSOptions": {
    "ExceptionsAllowedBeforeBreaking": 3,
    "DurationOfBreak": 10000,
    "TimeoutValue": 5000
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Category",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/api/web/category",
      "UpstreamHttpMethod": [
        "Get"
      ],
      "ServiceName": "category-serv",
      "FileCacheOptions": {
        "TtlSeconds": 15
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    }
  ]
}